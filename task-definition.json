{
  "family": "finance-tracker-backend",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::937590957333:role/ecsTaskExecutionRole",
  "containerDefinitions": [
    {
      "name": "finance-tracker-backend",
      "image": "937590957333.dkr.ecr.ap-southeast-1.amazonaws.com/finance-tracker-backend:latest",
      "portMappings": [
        {
          "containerPort": 8000,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "DEBUG",
          "value": "False"
        },
        {
          "name": "EMAIL_HOST",
          "value": "smtp.protonmail.com"
        },
        {
          "name": "EMAIL_PORT",
          "value": "587"
        },
        {
          "name": "EMAIL_USE_TLS",
          "value": "True"
        },
        {
          "name": "DB_PORT",
          "value": "5432"
        },
        {
          "name": "DB_SSL",
          "value": "require"
        }
      ],
      "secrets": [
        {
          "name": "SECRET_KEY",
          "valueFrom": "arn:aws:secretsmanager:ap-southeast-1:937590957333:secret:finance-tracker/django-secret-key-dODxcg"
        },
        {
          "name": "DB_HOST",
          "valueFrom": "arn:aws:secretsmanager:ap-southeast-1:937590957333:secret:finance-tracker/db-host-Nko4Yg"
        },
        {
          "name": "DB_NAME",
          "valueFrom": "arn:aws:secretsmanager:ap-southeast-1:937590957333:secret:finance-tracker/db-name-GQYr2C"
        },
        {
          "name": "DB_USER",
          "valueFrom": "arn:aws:secretsmanager:ap-southeast-1:937590957333:secret:finance-tracker/db-user-0JkKCk"
        },
        {
          "name": "DB_PASSWORD",
          "valueFrom": "arn:aws:secretsmanager:ap-southeast-1:937590957333:secret:finance-tracker/db-password-edcODn"
        },
        {
          "name": "EMAIL_HOST_USER",
          "valueFrom": "arn:aws:secretsmanager:ap-southeast-1:937590957333:secret:finance-tracker/email-user-3nPnqw"
        },
        {
          "name": "EMAIL_HOST_PASSWORD",
          "valueFrom": "arn:aws:secretsmanager:ap-southeast-1:937590957333:secret:finance-tracker/email-password-OE9Xhx"
        },
        {
          "name": "ALLOWED_HOSTS",
          "valueFrom": "arn:aws:secretsmanager:ap-southeast-1:937590957333:secret:finance-tracker/allowed-hosts-w40PGq"
        },
        {
          "name": "CORS_ALLOWED_ORIGINS",
          "valueFrom": "arn:aws:secretsmanager:ap-southeast-1:937590957333:secret:finance-tracker/cors-origins-yMnGPH"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/finance-tracker-backend",
          "awslogs-region": "ap-southeast-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
