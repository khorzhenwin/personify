# Database Configuration (PostgreSQL)
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=finance_tracker
DB_SSL=prefer

# Alternative: Use DATABASE_URL for single connection string
# DATABASE_URL=postgresql://user:password@localhost:5432/finance_tracker

# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Email Configuration (ProtonMail)
EMAIL_HOST=smtp.protonmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=personify-mailer@protonmail.com
EMAIL_HOST_PASSWORD=your-protonmail-password

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# No Redis configuration needed

# Security Settings
SECURE_SSL_REDIRECT=False
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True